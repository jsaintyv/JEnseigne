<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/linearLayout"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="10" 
    android:id="@+id/barreRecherche"
    >
	<TextView android:id="@+id/recherche" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1" android:textSize="14px" android:gravity="center"/>
	<Button android:id="@+id/btOk" android:text="@string/Ok" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="7" android:onClick="submitWord"/>
 </LinearLayout>
<org.jenseigne.MelimeloView android:id="@+id/melimeloView" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1"/>
</LinearLayout>

